<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/plasticsfragment"
    tools:context=".ui.dashboard.DashboardFragment">




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btnsLayout"
        android:gravity="center"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/dodadi"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Додади"
                android:layout_marginBottom="15dp"

                android:layout_marginRight="10dp"
                />

            <Button

                android:id="@+id/skeniraj"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Скенирај"
                android:layout_marginBottom="15dp"

                android:layout_marginLeft="10dp"

                />


        </LinearLayout>
        <TextView
            android:id="@+id/materijal_tekst"
            android:layout_width="350dp"
            android:layout_height="39dp"
            android:ems="12"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:inputType="none"
            android:text="Изберете материјал"
            android:paddingBottom="15dp"
            android:textIsSelectable="false"
            />


        <Button
            android:id="@+id/plastika"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:text="Пластика"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            app:icon="@drawable/ic_plastic_category"
            app:iconSize="85dp"
            app:iconGravity="textStart"
            app:iconPadding="20dp"
            android:paddingEnd="50dp"
            android:paddingStart="10dp"
        />

    <Button
        android:id="@+id/staklo"
        android:layout_width="350dp"
        android:layout_height="150dp"

        android:text="Стакло"
        android:textSize="20sp"
        app:icon="@drawable/ic_glass_category"
        app:iconSize="85dp"
        app:iconGravity="textStart"
        app:iconPadding="30dp"
        android:paddingEnd="50dp"
        android:paddingStart="-20dp"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:id="@+id/hartija"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:text="Хартија"
        android:textSize="20sp"
        app:icon="@drawable/ic_paper_category"
        app:iconSize="85dp"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        android:paddingEnd="50dp"
        android:paddingStart="0dp"
        />




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>