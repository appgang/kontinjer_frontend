<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/fragment_p2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="350dp"
            android:weightSum="11"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:stretchColumns="1">



            <TextView
                android:id="@+id/otpadok_tekst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_weight="1"

                android:text="Изберете отпадок"/>

            <Button
                android:id="@+id/shishe"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:text="Шише" />

            <Button
                android:id="@+id/kapache"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:text="Капаче" />

            <Button
                android:id="@+id/vrekja"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:text="Вреќа за ѓубре" />

            <Button
                android:id="@+id/sredstvo"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:text="Средство за чистење" />

            <Button
                android:id="@+id/kesa"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:text="Кеса" />

            <Button
                android:id="@+id/coffee2go"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:text="Чашка за кафе" />

            <Button
                android:id="@+id/stiropor"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:text="Стиропор" />

            <Button
                android:id="@+id/telefon"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:text="Телефон" />

            <Button
                android:id="@+id/print3d"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:text="3д принт" />

            <Button
                android:id="@+id/cetka"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="1"

                android:text="Четка за заби" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>