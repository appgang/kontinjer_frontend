<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/fragment_p2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:translationY="15dp">

            <TextView
                android:id="@+id/otpadok_tekst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:text="Изберете отпадок:"/>

            <Button
                android:id="@+id/shishe"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Шише" />

            <Button
                android:id="@+id/kapache"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Капаче" />

            <Button
                android:id="@+id/vrekja"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Вреќа за ѓубре" />

            <Button
                android:id="@+id/sredstvo"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Средство за чистење" />

            <Button
                android:id="@+id/kesa"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Кеса" />

            <Button
                android:id="@+id/coffee2go"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Чашка за кафе" />

            <Button
                android:id="@+id/stiropor"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Стиропор" />

            <Button
                android:id="@+id/telefon"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Телефон" />

            <Button
                android:id="@+id/print3d"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="3д принт" />

            <Button
                android:id="@+id/cetka"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Четка за заби" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>